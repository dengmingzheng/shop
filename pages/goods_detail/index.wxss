page{
  padding-bottom: 90rpx;
}

.swiper-group{
  height: 40vh;
  text-align: center;
}

.swiper-group .swiper-item{
  width: 100%;
  height: 100%;
}

.item-image{
  width: 60%;
}

.goods-price{
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
}

.goods-name-row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}

.goods-name-row .goods-name{
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 15rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 2;
}

.goods-name-row .goods-collect{
  flex: 1;
  border-left: 1px solid #000000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods-name-row .goods-collect .collect-image-dark{
   width: 40rpx;
   height: 40rpx;
}



.goods-info .goods-info-title{
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}

.btn_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #cccccc;
  box-sizing: border-box;
}

.btn_tool .tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}

.btn_tool .tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btn_cart{
  height: 100%;
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}

.btn_buy{
  height: 100%;
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}